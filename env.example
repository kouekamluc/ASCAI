# Django Settings
# REQUIRED IN PRODUCTION: Generate a strong secret key and set it here
# Use: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here
# Set to False in production
DEBUG=True
# Set to 'production' for production deployment
DJANGO_ENVIRONMENT=development
# REQUIRED IN PRODUCTION: Comma-separated list of allowed hostnames
# Example: example.com,www.example.com,api.example.com
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (PostgreSQL - REQUIRED)
# Option 1 (recommended for production): single DATABASE_URL
# Example: postgres://user:password@db-host:5432/ASCAI?sslmode=require
DATABASE_URL=

# Option 2: individual fields (used when DATABASE_URL is empty)
# Make sure PostgreSQL is installed and running
# Create the database: CREATE DATABASE "ASCAI" ENCODING 'UTF8';
# REQUIRED IN PRODUCTION unless password is embedded in DATABASE_URL
DB_NAME=ASCAI
DB_USER=postgres
DB_PASSWORD=your-postgres-password
DB_HOST=localhost
DB_PORT=5432
# SSL mode:
#   Development: prefer (allows non-SSL connections)
#   Production: require (default) or verify-full (requires CA cert)
# REQUIRED IN PRODUCTION: Should be 'require', 'verify-ca', or 'verify-full'
DB_SSLMODE=prefer

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@ascai.it

# AWS S3 (for file storage in production)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=eu-central-1

# Stripe (Payment Processing)
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# PayPal (Alternative Payment)
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox

# Redis (for Celery)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Site Configuration
SITE_URL=http://localhost:8000

# Logging
DJANGO_LOG_LEVEL=INFO

# Google OAuth2 (for social authentication)
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret

# Production Security Settings (automatically enabled when DJANGO_ENVIRONMENT=production)
# SECURE_SSL_REDIRECT=True  # Redirect HTTP to HTTPS (default: True in production)
